<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/appButton" android:layout_margin="5dip" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help" />

        <Button android:layout_margin="5dip" 
            android:id="@+id/defenseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defense Interface" />

        <Button android:layout_margin="5dip" 
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch Interface" />

        <Button android:layout_margin="5dip" 
            android:id="@+id/statisticsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics Interface" />

        <Button android:layout_margin="5dip" 
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings Interface" />
    </LinearLayout>

</RelativeLayout>